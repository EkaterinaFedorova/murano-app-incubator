FormatVersion: 2.0.0
Version: 1.0.0
Name: Deploy CloudFoundry

Parameters:
  repo: $repo
  branch: $branch

Body: |
  return deploy('{0} {1}'.format(args.repo, args.branch)).stdout

Scripts:
  deploy:
    Type: Application
    Version: 1.0.0
    EntryPoint: deployMurano.sh
    Files:
      - <installer.sh>
      - <common.sh>
    Options:
      captureStdout: false
      captureStderr: false
