FormatVersion: 2.0.0
Version: 1.0.0
Name: Setup RS

Parameters:
  ips: $ips

Body: |
  return deploy('{0}'.format(args.ips)).stdout

Scripts:
  deploy:
    Type: Application
    Version: 1.0.0
    EntryPoint: setupRS.sh
    Files:
      - <installer.sh>
      - <common.sh>
    Options:
      captureStdout: true
      captureStderr: true
