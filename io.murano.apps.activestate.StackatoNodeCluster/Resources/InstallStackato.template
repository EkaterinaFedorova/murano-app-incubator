FormatVersion: 2.0.0
Version: 1.0.0
Name: Install Stackato Role

Parameters:
  role: $role
  core_ip: $core_ip
  apiURL: $apiURL


Body: |
  return installRole('{0} {1} {2}'.format(args.role, args.core_ip, args.apiURL)).stdout

Scripts:
  installRole:
    Type: Application
    Version: 1.0.0
    EntryPoint: installRole.sh
    Files: []
    Options:
      captureStdout: true
      captureStderr: true