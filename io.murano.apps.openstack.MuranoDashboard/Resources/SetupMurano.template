FormatVersion: 2.0.0
Version: 1.0.0
Name: Start CloudFoundry

Parameters:
  keystone_ip: $keystone_ip

Body: |
  return deploy('{0}'.format(args.keystone_ip)).stdout

Scripts:
  deploy:
    Type: Application
    Version: 1.0.0
    EntryPoint: startMurano.sh
    Files:
      - <common.sh>
      - <installer.sh>
      - <settings.py>
      - <local_settings.py>
    Options:
      captureStdout: true
      captureStderr: false
